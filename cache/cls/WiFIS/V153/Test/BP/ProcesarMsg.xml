<Class name="WiFIS.V153.Test.BP.ProcesarMsg">
<Description>
Ejemplo de Business Process que recibe un WiFIS.Msg.GenericReq, devuelve una respuesta WiFISOK, transforma el mensaje a HL7 y lo envía para escribir en un fichero. </Description>
<Super>Ens.BusinessProcessBPL</Super>
<TimeCreated>63337,37257.020285</TimeCreated>

<XData name="BPL">
<Description>
BPL Definition</Description>
<XMLNamespace>http://www.intersystems.com/bpl</XMLNamespace>
<Data><![CDATA[
<process language='objectscript' request='WiFIS.V153.Msg.GenericReq' response='WiFIS.V153.WSC.s1.WSResposta' height='2000' width='2000' >
<context>
<property name='msgHL7' type='EnsLib.HL7.Message' instantiate='0' >
</property>
<property name='statusValidacion' type='%Status' instantiate='0' >
</property>
<property name='informeValidacion' type='%Stream.Object' instantiate='0' >
</property>
</context>
<sequence xend='200' yend='1000' >
<transform name='XML 2 HL7' class='WiFIS.V153.DT.XML2HL7' source='request' target='context.msgHL7' xpos='200' ypos='250' >
<annotation><![CDATA[Convertir HL7 de XML a ER7]]]]><![CDATA[></annotation>
</transform>
<code name='Respuesta WiFIS' xpos='200' ypos='350' >
<![CDATA[  set response = ##class(WiFIS.V153.Utils.Functions).WiFISRespostaOK()]]]]><![CDATA[>
</code>
<call name='Escribir HL7 ER7 Fichero' target='Escribir HL7 ER7 Fichero' async='1' xpos='200' ypos='450' >
<request type='EnsLib.HL7.Message' >
<assign property="callrequest" value="context.msgHL7" action="set" />
</request>
<response type='Ens.Response' />
</call>
<call name='Escribir HL7 XML Fichero' target='Escribir HL7 XML Fichero' async='1' xpos='200' ypos='550' >
<request type='EnsLib.HL7.Message' >
<assign property="callrequest" value="context.msgHL7" action="set" />
</request>
<response type='Ens.Response' />
</call>
<if name='if Validar' condition='..%Process.Validate' xpos='200' ypos='650' xend='200' yend='900' >
<true>
<code name='Validación' xpos='335' ypos='800' >
<annotation><![CDATA[Llamar a clase de validación 
de mensajes WiFIS y generar
informe (si activada la opción).]]]]><![CDATA[></annotation>
<![CDATA[ // calcular nombre de clase de validación
 set servicio = ##class(WiFIS.V153.Utils.Functions).WiFISServicio(context.msgHL7)
 set tipo = ##class(WiFIS.V153.Utils.Functions).WiFISTipo(context.msgHL7)
 set cn = "WiFIS.V153.Val."_servicio_"."_tipo
  
 if ##class(%Dictionary.ClassDefinition).%ExistsId(cn) {
   // llamar a clase de validación
   set context.statusValidacion = $classmethod(cn,"Validar",context.msgHL7)
   
   // agregar errores de validacion a respuesta WiFIS
   if $$$ISERR(context.statusValidacion) {
     set errores=$system.Status.GetErrorText(context.statusValidacion)
     $$$LOGWARNING(errores)
     set response = ##class(WiFIS.V153.Utils.Functions).WiFISRespostaInvalid(errores)
   }
   
   // informe de validación
   if ..%Process.ValidationReportTarget'="" {
     set titulo = servicio_"."_tipo
     
     set tSC=##class(WiFIS.V153.Val.General).ResultadoValidacion(context.msgHL7, request.DatosXML, context.statusValidacion, titulo, .stream)
     if $$$ISERR(tSC) $$$LOGERROR($system.Status.GetOneErrorText(tSC))
     
     set tSC=..%Process.SendRequestAsync(..%Process.ValidationReportTarget,##class(Ens.StreamContainer).%New(stream))
   }
 } else {
   $$$LOGINFO("Validación activada pero no existe la clase de validación: "_cn)
 }]]]]><![CDATA[>
</code>
</true>
</if>
</sequence>
</process>
]]></Data>
</XData>

